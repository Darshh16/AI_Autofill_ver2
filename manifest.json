{
    "manifest_version": 3,
    "name": "AI Form Autofill",
    "version": "1.0.0",
    "description": "Intelligent form filler using Groq AI",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "src/background/index.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content/index.jsx"
            ]
        }
    ]
}